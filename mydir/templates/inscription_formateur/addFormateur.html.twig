
<div class="col-lg-7 mt-5 mt-lg-1 d-flex align-items-stretch">
    <form action="" method="post" role="form" class="php-email-form">
        <div class="form-row">
            <div class="form-group col-md-6">
                {{ form_start(form) }}

                {{ form_label(form.username) }}
                {{ form_widget(form.username,{ 'attr':{ 'placeholder':"Type your username",'class':"form-control"}}) }}
                {{ form_label(form.password) }}
                {{ form_widget(form.password,{ 'attr':{ 'class':"form-control"}}) }}

                {{ form_widget(form.role,{ 'attr':{'style':'display:none'}}) }}


                {{ form_row(form.Add,{ 'attr':{ 'class':"btn btn-primary"}}) }}

            </div>
        </div>
    </form>
</div>
