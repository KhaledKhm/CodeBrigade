{% extends 'base.html.twig' %}
{% block body %}
    <h1>Liste des Evenements</h1>



    <table id="bootstrap-data-table" class="table table-striped table-bordered" border="1" class="table table-hover">
        <tr class="table-light">
            <th>ID</th>
            <th>Libelle</th>
            <th>Description</th>
            <th>Date Debut</th>
            <th>Date Fin</th>
            <th>Prix Inscription</th>
            <th>Modifier</th>
            <th>Supprimer</th>


        </tr>
        {% for Evenement in classe %}
            <tr>
                <td>
                    {{Evenement.id}}
                </td>
                <td>
                    {{Evenement.libelle}}
                </td>
                <td>
                    {{ Evenement.description}}
                </td>
                <td>
                    {{ Evenement.DateDebut}}
                </td>
                <td>
                    {{ Evenement.DateFin}}
                </td>
                <td>
                    {{ Evenement.PrixInscription}}dt
                </td>
                <td>
               <form  action="{{ path('modifierEvenement',{'id':Evenement.id} )}}"><button class="btn btn-warning btn-sm"><h6>MODIFIER</h6></button></form>
                </td>

                <td>

                    <form action="{{ path('supprimerEvenement',{'id':Evenement.id} )}}"><button  class="btn btn-danger btn-sm"><h6>Supprimer</h6></button></form>
                </td>

                <td>
                    <form action="{{ path('supprimerEvenement',{'id':Evenement.id} )}}"><button class="btn btn-primary btn-xs"><h6>LISTES DES INSCRITS</h6></button></form>
                </td>
            </tr>
        {% endfor %}

    </table>
    <a href={{ path('ajouterEvenement') }}>Cr√©er une Evenement</a>



{% endblock %}